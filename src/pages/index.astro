<style>
  :global(body) {
    margin: 0;
    font-family: 'Poppins', sans-serif;
    background-color: #0d1117;
    color: #c9d1d9;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    padding: 1rem;
  }

  main {
    max-width: 1200px;
    width: 100%;
    text-align: center;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .hero h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 0.5rem;
    color: #58a6ff;
  }

  .hero h1 span {
    color: #1f6feb;
  }

  .hero p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    color: #8b949e;
  }

  .bento-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    padding: 1rem;
  }

  .bento-grid li {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }

  .bento-grid li:nth-child(5n) {
    grid-column: span 2;
    grid-row: span 2;
  }

  @media (min-width: 768px) {
    .bento-grid {
      gap: 2rem;
    }
  }
</style>
